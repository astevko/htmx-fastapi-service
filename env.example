# Environment Variables for HTMX-FastAPI Service
# Copy this file to .env and update the values

# JWT Secret Key (REQUIRED - Generate a strong random key)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Demo User Credentials (Change these in production)
DEMO_USERNAME=user@example.com
DEMO_PASSWORD=your-secure-password-here

# Database Configuration
DATABASE_URL=postgresql+psycopg://htmx_user:htmx_password@localhost:5432/htmx_db

# Security Settings
# Set to True in production with HTTPS
SECURE_COOKIES=True

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
